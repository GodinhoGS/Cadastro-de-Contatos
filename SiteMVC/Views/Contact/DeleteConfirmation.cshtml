@model ContactModel
@{
    ViewData["Title"] = "Delete contact Confirmation";
}

<div class="text-center">

    <h1 class="display-4 font-weight-bold">Do you really want to delete the contact of @Model.Name?</h1>

</div>

<a class="btn btn-primary btn-block" rule="button" asp-controller="Contact" asp-action="Index">Cancel deletion</a>
<a class="btn btn-danger btn-block" rule="button" asp-controller="Contact" asp-route-id="@Model.Id" asp-action="Delete">Confirm deletion</a>